{
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/build",
        "--background-index",
        "--header-insertion=never",
        "--query-driver=C:/esp/xtensa-lx106-elf/bin/xtensa-lx106-elf-gcc.exe",
        "--clang-tidy=false"
    ],
    "clangd.fallbackFlags": [
        "-I${workspaceFolder}/build/config",
        "-IC:/esp/ESP8266_RTOS_SDK/components/esp8266/include",
        "-IC:/esp/ESP8266_RTOS_SDK/components/freertos/include",
        "-IC:/esp/ESP8266_RTOS_SDK/components/freertos/port/esp8266/include",
        "-IC:/esp/ESP8266_RTOS_SDK/components/esp_common/include"
    ],
    "files.associations": {
        "*.h": "c"
    }
}